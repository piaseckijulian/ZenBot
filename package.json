{
  "name": "zenbot",
  "version": "1.0.0",
  "private": true,
  "description": "ZenBot, a modern and super-simple Discord bot, brings ease to your server. From quick commands to seamless interactions, ZenBot is designed for effortless enjoyment!",
  "main": "dist/index.js",
  "scripts": {
    "start": "node .",
    "build": "tsup",
    "dev": "tsx ./src/index.ts",
    "dev:watch": "tsx watch ./src/index.ts",
    "format": "prettier . -w",
    "format:check": "prettier . -c",
    "lint": "eslint .",
    "prepare": "husky"
  },
  "repository": "github:piaseckijulian/ZenBot",
  "keywords": [
    "discord",
    "bot",
    "discord bot",
    "zenbot",
    "piaseckijulian"
  ],
  "author": "Julian Piasecki",
  "license": "MIT",
  "dependencies": {
    "dayjs": "^1.11.11",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5",
    "glob": "^10.3.12",
    "ms": "^2.1.3",
    "pretty-ms": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.1.1",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.12.7",
    "consola": "^3.2.3",
    "eslint": "^9.1.1",
    "globals": "^15.1.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  }
}
