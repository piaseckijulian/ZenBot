{
  "name": "zenbot",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "ZenBot is a helpful and friendly Discord Bot that makes managing your server easy and fun.",
  "main": "./dist/index.js",
  "scripts": {
    "start": "node .",
    "build": "tsc",
    "dev": "tsx watch ./src/index.ts",
    "check": "biome check .",
    "check:ci": "biome ci .",
    "format": "biome format . --write",
    "prepare": "husky"
  },
  "repository": "github:piaseckijulian/ZenBot",
  "keywords": ["Discord", "Bot", "ZenBot"],
  "author": "Julian Piasecki",
  "license": "MIT",
  "dependencies": {
    "@t3-oss/env-core": "^0.10.1",
    "dayjs": "^1.11.11",
    "discord.js": "^14.15.3",
    "dotenv": "^16.4.5",
    "glob": "^10.4.2",
    "ms": "^2.1.3",
    "pretty-ms": "^9.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.14.9",
    "consola": "^3.2.3",
    "husky": "^9.0.11",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  }
